{
  "extends": "@vercel/style-guide/typescript",
  "compilerOptions": {
    "declaration": true,
    "allowJs": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "resolveJsonModule": true,
    "sourceMap": true,
    // style-guide enables this but our repo doesn't and it causes type issues
    "noUncheckedIndexedAccess": false
  }
}
